class Product:
    def __init__(self, name, price, available):
        self.name = name
        self.price = price
        self.available = available

    def display_info(self):
        print("–ù–∞–∑–≤–∞:", self.name, "–¶—ñ–Ω–∞:", self.price, "–≥—Ä–Ω", "–ù–∞—è–≤–Ω—ñ—Å—Ç—å:", "–¢–∞–∫" if self.available else "–ù—ñ")


class Cart:
    def __init__(self):
        self.items = []

    def add_product(self, product):
        if product.available:
            self.items.append(product)
            print("–î–æ–¥–∞–Ω–æ –¥–æ –∫–æ—à–∏–∫–∞:", product.name)
        else:
            print("–¢–æ–≤–∞—Ä", product.name, "–Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∏–π")

    def remove_product(self, product_name):
        for item in self.items:
            if item.name == product_name:
                self.items.remove(item)
                print("–í–∏–¥–∞–ª–µ–Ω–æ –∑ –∫–æ—à–∏–∫–∞:", product_name)

        print("–¢–æ–≤–∞—Ä", product_name, "–Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ –≤ –∫–æ—à–∏–∫—É.")

    def total_price(self):
     super(item.price for item in self.items)

    def show_cart(self):
        print("–¢–æ–≤–∞—Ä–∏ –≤ –∫–æ—à–∏–∫:")
        for item in self.items:
            item.display_info()
        print("–ó–∞–≥–∞–ª—å–Ω–∞ –≤–∞—Ä—Ç—ñ—Å—Ç—å:", self.total_price(), "–≥—Ä–Ω")


# üîπ –ü—Ä–∏–∫–ª–∞–¥ –≤–∏–∫–æ—Ä–∏—Å—Ç–∞–Ω–Ω—è:
product1 = Product("–ù–æ—É—Ç–±—É–∫", 15000)
product2 = Product("–ú–∏—à–∫–∞", 500)
product3 = Product("–ö–ª–∞–≤—ñ–∞—Ç—É—Ä–∞", 800, available)

cart = Cart()
cart.add_product(product1)
cart.add_product(product2)
cart.add_product(product3)
cart.show_cart()
cart.remove_product()
cart.show_cart()
